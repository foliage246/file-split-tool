# 環境配置文件示例
# 複製此文件為 .env 並填入實際的值

# 應用環境
ENVIRONMENT=development
DEBUG=true

# 服務器設置
HOST=0.0.0.0
PORT=8000

# Redis 配置
REDIS_URL=redis://localhost:6379

# JWT 安全設置
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# Stripe 付費系統配置
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PRICE_ID=price_your_monthly_subscription_price_id

# 檔案處理限制
FREE_FILE_SIZE_LIMIT=10
PREMIUM_FILE_SIZE_LIMIT=100
FREE_DAILY_LIMIT=5
PREMIUM_DAILY_LIMIT=50

# 存儲路徑
UPLOAD_DIR=/app/storage/uploads
OUTPUT_DIR=/app/storage/outputs

# CORS 設置
CORS_ORIGINS=["http://localhost:3000","http://localhost","http://localhost:80"]